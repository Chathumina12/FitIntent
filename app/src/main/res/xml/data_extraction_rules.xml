<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from backup -->
        <exclude domain="sharedpref" path="encrypted_prefs" />
        <exclude domain="database" path="fit_intent_database" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow basic app data transfer -->
        <include domain="file" path="." />
        <exclude domain="sharedpref" path="encrypted_prefs" />
    </device-transfer>
</data-extraction-rules>