<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Streak Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStreakSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/streak_summary"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_background"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <!-- Streak Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Current Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_fire"
                                android:layout_marginBottom="@dimen/spacing_small"
                                app:tint="@color/red_primary" />

                            <TextView
                                android:id="@+id/tvCurrentStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/red_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_streak"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Today's Progress -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_today"
                                android:layout_marginBottom="@dimen/spacing_small"
                                app:tint="@color/green_primary" />

                            <TextView
                                android:id="@+id/tvTodayProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/0"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/green_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/today_completed"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Weekly Goal -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_target"
                                android:layout_marginBottom="@dimen/spacing_small"
                                app:tint="@color/blue_primary" />

                            <TextView
                                android:id="@+id/tvWeeklyGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/blue_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weekly_goal"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Habits Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_habits"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@color/on_background" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageHabits"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage"
                    android:textColor="@color/red_primary"
                    app:icon="@drawable/ic_settings"
                    app:iconTint="@color/red_primary"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_xxlarge"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_habits_empty"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:tint="@color/on_surface_variant"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_habits_yet"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@color/on_background"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_habits_description"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateFirstHabit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_first_habit"
                    app:icon="@drawable/ic_add"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@color/on_primary"
                    app:iconTint="@color/on_primary" />

            </LinearLayout>

            <!-- Habits RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                tools:listitem="@layout/item_habit"
                tools:itemCount="3" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Add Habit FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_large"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_habit"
        app:tint="@color/on_primary"
        app:backgroundTint="@color/red_primary"
        app:borderWidth="0dp" />

    <!-- Loading State -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorColor="@color/red_primary"
        app:trackColor="@color/outline" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>