<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alert Dialog Dark Theme -->
    <style name="AlertDialog.Dark" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:backgroundTint">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialog.Button.Neutral</item>
    </style>

    <!-- Dialog Title Text Style -->
    <style name="AlertDialog.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Dialog Body Text Style -->
    <style name="AlertDialog.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineHeight">@dimen/line_height_medium</item>
    </style>

    <!-- Dialog Button Styles -->
    <style name="AlertDialog.Button.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="AlertDialog.Button.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/text_secondary</item>
    </style>

    <style name="AlertDialog.Button.Neutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/text_secondary</item>
    </style>

    <!-- ShapeableImageView Circular Style -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Card Styles -->
    <style name="CardView.Profile" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Profile.Edit" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="Button.Profile.Logout" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Profile.UserName" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Profile.UserEmail" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Profile.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Profile.StatValue" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Profile.StatLabel" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- FitIntent Text Appearance Styles -->
    <style name="TextAppearance.FitIntent.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>