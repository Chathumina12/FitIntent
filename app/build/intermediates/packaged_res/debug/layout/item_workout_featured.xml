<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/card_elevation"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <!-- Workout Image/Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWorkoutIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/red_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layoutWorkoutInfo">

            <ImageView
                android:id="@+id/imgWorkoutIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_fitness"
                app:tint="@color/on_primary"
                android:contentDescription="@string/workout_icon"
                tools:src="@drawable/ic_fitness" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Workout Information -->
        <LinearLayout
            android:id="@+id/layoutWorkoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintStart_toEndOf="@id/cardWorkoutIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutWorkoutStats"
            app:layout_constraintBottom_toTopOf="@id/layoutWorkoutDetails">

            <!-- Workout Name -->
            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Body HIIT"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/on_background"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Full Body HIIT" />

            <!-- Workout Description -->
            <TextView
                android:id="@+id/tvWorkoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High-intensity interval training"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/on_surface_variant"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/spacing_tiny"
                tools:text="High-intensity interval training" />

        </LinearLayout>

        <!-- Workout Stats -->
        <LinearLayout
            android:id="@+id/layoutWorkoutStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_tiny">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/blue_primary"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30min"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/blue_primary"
                    android:textStyle="bold"
                    tools:text="30min" />

            </LinearLayout>

            <!-- Calories -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_fire"
                    app:tint="@color/orange_primary"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="360"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/orange_primary"
                    android:textStyle="bold"
                    tools:text="360" />

            </LinearLayout>

        </LinearLayout>

        <!-- Workout Details -->
        <LinearLayout
            android:id="@+id/layoutWorkoutDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintStart_toEndOf="@id/cardWorkoutIcon"
            app:layout_constraintTop_toBottomOf="@id/layoutWorkoutInfo"
            app:layout_constraintEnd_toStartOf="@id/btnStartWorkout"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Difficulty Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                style="@style/Widget.Material3.Chip.Assist"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/surface_variant"
                app:chipStrokeColor="@color/outline"
                app:chipStrokeWidth="1dp"
                app:ensureMinTouchTargetSize="false"
                android:layout_marginEnd="@dimen/spacing_small"
                tools:text="Intermediate" />

            <!-- Category Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIT"
                style="@style/Widget.Material3.Chip.Assist"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/surface_variant"
                app:chipStrokeColor="@color/outline"
                app:chipStrokeWidth="1dp"
                app:ensureMinTouchTargetSize="false"
                tools:text="HIIT" />

        </LinearLayout>

        <!-- Start Workout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:backgroundTint="@color/red_primary"
            android:textColor="@color/on_primary"
            app:cornerRadius="@dimen/corner_radius_medium"
            app:icon="@drawable/ic_play_arrow"
            app:iconTint="@color/on_primary"
            app:layout_constraintTop_toBottomOf="@id/layoutWorkoutInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>