<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Background Image with Overlay -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_fitintent_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:layout_marginBottom="@dimen/spacing_xlarge" />

        <!-- Main Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build habit. Own your day."
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create powerful fitness habits that last. Start your 21-day transformation journey."
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_xlarge" />

        <!-- Spacer to push button to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Continue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cornerRadius="@dimen/corner_radius_medium"
            app:iconGravity="end"
            app:icon="@drawable/ic_arrow_forward" />

        <!-- Skip Intro Text -->
        <TextView
            android:id="@+id/skipIntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip Intro"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:alpha="0.8"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_small" />

    </LinearLayout>

</RelativeLayout>