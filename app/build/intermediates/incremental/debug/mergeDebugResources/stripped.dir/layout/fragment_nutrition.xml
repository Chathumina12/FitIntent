<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition"
            android:textSize="@dimen/text_size_headline"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Daily Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_small"
            app:cardBackgroundColor="@color/success_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Summary"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calories"
                            android:contentDescription="Calories" />

                        <TextView
                            android:id="@+id/caloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1500"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_tiny" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Protein -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_protein"
                            android:contentDescription="Protein" />

                        <TextView
                            android:id="@+id/proteinText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65g"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_tiny" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protein"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Water -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_water"
                            android:contentDescription="Water" />

                        <TextView
                            android:id="@+id/waterText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/8"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_tiny" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glasses"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Track Meal Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trackMealButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track Meal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    style="@style/Widget.FitIntent.Button"
                    app:icon="@drawable/ic_add"
                    app:cornerRadius="@dimen/corner_radius_medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Water Tracker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hydration Tracker"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addWaterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 Glass"
                style="@style/Widget.FitIntent.Button.TextButton"
                app:icon="@drawable/ic_add" />

        </LinearLayout>

        <!-- Water Progress -->
        <LinearLayout
            android:id="@+id/waterProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_large">

            <!-- Water glasses will be added dynamically -->

        </LinearLayout>

        <!-- Today's Tips -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Nutrition Tips"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tipsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:nestedScrollingEnabled="false" />

        <!-- Meal Suggestions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal Suggestions"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewAllMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/padding_small" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Nutrition Goals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition Goals"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- Calorie Goal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Calorie Goal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:id="@+id/calorieProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:progress="75"
                        android:max="100"
                        android:progressTint="@color/success" />

                    <TextView
                        android:id="@+id/calorieProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500 / 2000 cal"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/spacing_tiny" />

                </LinearLayout>

                <!-- Protein Goal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein Intake"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:id="@+id/proteinProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:progress="80"
                        android:max="100"
                        android:progressTint="@color/primary" />

                    <TextView
                        android:id="@+id/proteinProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65 / 80 grams"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/spacing_tiny" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>